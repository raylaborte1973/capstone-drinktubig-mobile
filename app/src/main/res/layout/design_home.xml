<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/Margin2"
        app:cardBackgroundColor="#E8EBEF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Margin10">

            <ImageView
                android:id="@+id/storeImg"
                android:layout_width="@dimen/Margin100"
                android:layout_height="@dimen/Margin100"
                android:scaleType="centerCrop"
                android:src="@drawable/store_img" />

            <LinearLayout
                android:id="@+id/infoLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/storeImg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/Margin8"
                    android:text="Pure Aqua Water Refilling Station"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/Text18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/storeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/purple_200"
                    android:text="Brgy Canghang-at, Mandaue City, 6014 Cebu"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/storeOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/purple_200"
                    android:text="Opens 7AM Fri"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/storeContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/purple_200"
                    android:text="0949 366 0107"
                    android:textSize="14dp" />

            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>